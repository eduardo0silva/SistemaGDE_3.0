<h1>Novo documento</h1>

<% form_for(@documento) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.hidden_field :usuario_id %>
  </p>
	
  <p>
    <%= f.label :numero %><br />
    <%= f.text_field :numero %>
  </p>
  <p>
    <%= f.label :destinatario %><br />
    <%= f.text_field :destinatario %>
  </p>
  <p>
    <%= f.label :assunto %><br />
    <%= f.text_field :assunto %>
  </p>
  <p>
    <%= f.label :corpo %><br />
    <%= f.text_area :corpo %>
  </p>
  <p>
    <%= f.label :despedida %><br />
    <%= f.text_field :despedida %>
  </p>
  <p>
    <%= f.label :remetente %><br />
    <%= f.text_field :remetente %>
  </p>
  <p>
    <%= f.submit 'Criar Documento' %>
  </p>
<% end %>

<%= link_to 'Voltar', documentos_path %>