<p>Fa&ccedil;a o seu cadastro para utilizar o sistema.</p>
<hr/>
<%= form_for(@usuario) do |f| %>
	  <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
	
	<div class="campoTexto">
		<%= f.label :nome %><br/>
		<%= f.text_field :nome %>
	</div>
	
	<div class="campoTexto">
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</div>
	
	<div class="campoTexto">
		<%= f.label :senha %><br/>
		<%= f.password_field :senha %>
	</div>
	
	<div class="campoTexto">
		<%= f.label :senha_confirmation, "ConfirmaÃ§Ã£o" %><br/>
		<%= f.password_field :senha_confirmation %>
